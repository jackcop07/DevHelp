
<MudGrid>
    <MudItem xs="12" sm="12" md="6">
        <MudPaper>
            <MudTextField @bind-Value="Input" Immediate="true" Label="Input" Variant="Variant.Text" Margin="Margin.Dense" Lines="15" Class="px-2"/>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="12" md="6">
        <MudPaper>
            <MudTextField @onfocus="CopyText" @bind-Value="Output" Label="Output" Variant="Variant.Text" Margin="Margin.Dense" Lines="15" Class="px-2" ReadOnly="true" />
        </MudPaper>
    </MudItem>
</MudGrid>
<MudItem Class="d-flex justify-end py-2 px-1 mt-6">
        <MudButton Class="pa-2 mx-2 mud-theme-secondary" @onclick="ClearInput">Clear</MudButton>
        <MudButton Class="pa-2 mx-2 mud-theme-info" @onclick="Format" Disabled=FormatDisabled>Format</MudButton>
</MudItem>