@page "/encode/jwt"

<MudContainer Class="mt-2 px-12" MaxWidth="MaxWidth.False">
    <MudText Typo="Typo.h3" Align="Align.Center">JWT Decoder</MudText>

    <MudGrid>
    <MudItem xs="12" sm="12" md="6">
        <MudPaper>
            <MudTextField @bind-Value="Input" Immediate="true" Label="Input" Variant="Variant.Text" Margin="Margin.Dense" Lines="15" Class="px-2"/>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="12" md="6">
        <MudGrid>
            <MudItem xs="12">
                <MudPaper>
                    <MudTextField @bind-Value="Header" Label="Header" Variant="Variant.Text" Margin="Margin.Dense" Lines="4" Class="px-2" ReadOnly="true" />
                </MudPaper>
            </MudItem>
            <MudItem xs="12">
                <MudPaper>
                    <MudTextField @bind-Value="Body" Label="Body" Variant="Variant.Text" Margin="Margin.Dense" Lines="8" Class="px-2" ReadOnly="true" />
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>
<MudItem Class="d-flex justify-end py-2 px-1 mt-6">
        <MudButton Class="pa-2 mx-2 mud-theme-secondary" @onclick="ClearInput">Clear</MudButton>
        <MudButton Class="pa-2 mx-2 mud-theme-info" @onclick="Decode" Disabled=FormatDisabled>Decode</MudButton>
</MudItem>
</MudContainer>