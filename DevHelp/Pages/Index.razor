@page "/"

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid Class="mt-8">
        @foreach(var item in DashboardItems)
        {
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="25" Class="rounded-lg pb-4">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5" Align="Align.Center" Color="Color.Info">@item.Title</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardActions Class="d-flex justify-center">
                        <MudIconButton Icon="@item.Icon" Size="Size.Large" Color="Color.Info" OnClick="(() => StartSite(item.Link))" />
                    </MudCardActions>
                </MudCard>
            </MudItem>   
        }
    </MudGrid>
</MudContainer>



